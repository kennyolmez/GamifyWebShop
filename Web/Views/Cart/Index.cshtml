@{
}

@model IndexViewModel


@if (Model.UserCart.Products is not null  && Model.UserCart.Products.Count() > 0)
{
    @foreach (var item in Model.UserCart.Products)
    {
        <p>@item.Name</p>
    }
}
else
{
    <p>There are no products in the shopping cart yet!</p>
}
